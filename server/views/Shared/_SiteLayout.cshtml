<!DOCTYPE html>
<html>
    <head>
        <title>Energy Simply Challenge</title>
        <environment names="Development">
            <script src="@Url.Content("~/lib/jquery/dist/jquery.min.js")"></script>
            <script src="@Url.Content("~/lib/popper.js/dist/popper.min.js")"></script>
            <script src="@Url.Content("~/lib/bootstrap/dist/js/bootstrap.min.js")"></script>
            <link rel="stylesheet" href="@Url.Content("~/lib/bootstrap/dist/css/bootstrap.css")" />
            <link rel="stylesheet" href="@Url.Content("~/css/site.css")" />
        </environment>
        <environment names="Production">
            <script src="@Url.Content("~/demos/dotnet/lib/jquery/dist/jquery.min.js")"></script>
            <script src="@Url.Content("~/demos/dotnet/lib/popper.js/dist/popper.min.js")"></script>
            <script src="@Url.Content("~/demos/dotnet/lib/bootstrap/dist/js/bootstrap.min.js")"></script>
            <link rel="stylesheet" href="@Url.Content("~/demos/dotnet/lib/bootstrap/dist/css/bootstrap.css")" />
            <link rel="stylesheet" href="@Url.Content("~/demos/dotnet/css/site.css")" />
        </environment>
    </head>
    <body>
        <div id="header">
            <div id="header-container" class="container">
                <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item active">
                                <a class="nav-link" asp-area="" asp-controller="Customers" asp-action="Index">Home</a>
                            </li>
                            <li  class="nav-item active">
                                <a class="nav-link" asp-area="" asp-controller="Plans" asp-action="Index">Plans</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
        <div class="container">
            @RenderBody()
        </div>
    </body>
</html>