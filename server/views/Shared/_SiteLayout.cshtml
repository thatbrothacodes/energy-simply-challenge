                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Customers" asp-action="Index">Home</a>
                        </li>
                        <li  class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Plans" asp-action="Index">Plans</a>
                        </li>
                    </ul>
                </div>
            </nav>
            <div>
                 @RenderBody()
            </div>
        </div>
